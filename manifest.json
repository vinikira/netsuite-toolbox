{
  "manifest_version": 2,
  "name": "NetSuite Toolbox",
  "version": "1.0.0",
  "applications": {
    "gecko": {
      "id": "netsuite-toolsuite@peterries"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.netsuite.com/*"
      ],
      "js": [
        "content-scripts/index.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "content-scripts/background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "https://*.netsuite.com/*"
  ],
  "browser_action": {
    "default_icon": "logo.svg",
    "default_title": "NetSuite ToolSuite",
    "default_popup": "popup/netsuite-toolsuite.html"
  },
  "web_accessible_resources": [
    "content-scripts/page-javascript-context.js"
  ]
}
